<div class="mb-4">
    <label for="startDate" class="block text-gray-700 text-sm font-bold mb-2">Start Date</label>
    <input
            type="date"
            name="startDate"
            id="startDate"
            hx-get="{{ url_for('include') }}"
            hx-include="#endDate, #workLocation"
            hx-target="#dates"
            hx-trigger="blur throttle:100ms"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="{{ START_DATE }}" />

    {% if MESSAGES.ERROR_INVALID_START_DATE %}
        <p class="text-red-500 text-xs italic pt-1">The start date is invalid</p>
    {% endif %}
    {% if MESSAGES.ERROR_EMPTY_START_DATE %}
        <p class="text-red-500 text-xs italic pt-1">The start date cannot be empty</p>
    {% endif %}
</div>